{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SpeedTestResult",
  "type": "object",
  "required": ["timestamp", "download", "upload", "ping", "jitter"],
  "properties": {
    "timestamp": { "type": "integer", "description": "Unix epoch ms when test completed" },
    "timestampReadable": { "type": "string", "description": "Locale string of timestamp" },
    "download": { "type": ["number", "null"], "description": "Download speed Mbps" },
    "upload": { "type": ["number", "null"], "description": "Upload speed Mbps" },
    "ping": { "type": ["number", "null"], "description": "Average ping ms" },
    "jitter": { "type": ["number", "null"], "description": "Jitter ms (std dev)" }
  }
}
